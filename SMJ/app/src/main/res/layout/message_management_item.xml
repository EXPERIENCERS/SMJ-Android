<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/second_color">

    <View
        android:id="@+id/message_management_item_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rectangle_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/message_management_profile_image"
        android:layout_width="84dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_management_item_view"
        app:layout_constraintStart_toStartOf="@+id/message_management_item_view"
        app:layout_constraintTop_toTopOf="@+id/message_management_item_view"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/message_management_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="아이디"
        app:layout_constraintStart_toEndOf="@+id/message_management_profile_image"
        app:layout_constraintTop_toTopOf="@+id/message_management_profile_image" />

    <TextView
        android:id="@+id/message_management_message"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="내일 점심 어떠세요"
        app:layout_constraintStart_toStartOf="@+id/message_management_name"
        app:layout_constraintTop_toBottomOf="@+id/message_management_name" />

    <TextView
        android:id="@+id/message_management_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2시간전"
        app:layout_constraintBottom_toBottomOf="@+id/message_management_name"
        app:layout_constraintEnd_toEndOf="@+id/message_management_message" />

    <TextView
        android:id="@+id/message_management_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:text="읽음"
        app:layout_constraintBottom_toBottomOf="@+id/message_management_item_view"
        app:layout_constraintEnd_toEndOf="@+id/message_management_item_view" />

</androidx.constraintlayout.widget.ConstraintLayout>